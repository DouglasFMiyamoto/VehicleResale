{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/CustomerService/CustomerService.Api/CustomerService.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "Containers: Docker Compose",
        "type": "process",
        "command": "docker",
        "args": [
          "compose",
          "-f",
          "${workspaceFolder}/docker-compose.yml",
          "up",
          "-d",
          "--build",
          "sales-api"
        ],
        "problemMatcher": []
    }
  ]
}
